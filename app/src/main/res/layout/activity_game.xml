<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#313D6C"
    tools:context=".GameActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins"
                android:text="Tic Tac Toe"
                android:textColor="#FFFFFF"
                android:textSize="40sp" />

            <ImageView
                android:id="@+id/blue_underline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:src="@drawable/blue_underline" />

            <LinearLayout
                android:id="@+id/levelLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/blue_underline"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:weightSum="100">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="15"
                    android:src="@drawable/leftarrow" />

                <TextView
                    android:id="@+id/playerStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="70"
                    android:fontFamily="@font/poppins"
                    android:text="Wait"
                    android:textAlignment="center"
                    android:textColor="#a9a9a9"
                    android:textSize="24sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="15"
                    android:src="@drawable/rightarrow" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/xoboxlinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/levelLinearLayout"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:saveEnabled="false"
                android:layout_marginTop="64dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/button1"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="X"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#216efd" />

                    <TextView
                        android:id="@+id/button2"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#216efd" />

                    <TextView
                        android:id="@+id/button3"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#216efd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/button4"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#216efd" />

                    <TextView
                        android:id="@+id/button5"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="O"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#216efd" />

                    <TextView
                        android:id="@+id/button6"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#216efd" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/button7"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="O"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#216efd" />

                    <TextView
                        android:id="@+id/button8"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#216efd" />

                    <TextView
                        android:id="@+id/button9"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="33.3"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        android:text="X"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />

                </LinearLayout>

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/playButton"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xoboxlinearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/buttonshape"
                android:fontFamily="@font/poppins"
                android:text="Play"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="18sp" />

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/coordinatorLayout"
                android:layout_below="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>